      <div class="container">
        <div class="row">
            <% for (var i = 0; i < event.length; i++  ){ %>
              <div class="col-sm-4">
                  <div class="card" style="width: 100%;">
                    <img class="card-img-top" src="<%= event[i].imgUrl %>" width="100%" height="280px" alt="Card image cap">
                    <div class="card-body">
                       <h5 class="blog-title"><%= event[i].title  %></h5>
                          <i class="fa fa-calendar" aria-hidden="true">
                              <span class="day"><%= event[i].date.toString().slice(0,4) %></span>
                              <span class="day"><%= event[i].date.toString().slice(8,10) %></span>
                              <span class="mos"><%= event[i].date.toString().slice(4,7) %></span>
                              <span class="yrs"><%= event[i].date.toString().slice(11,15) %></span>
                          </i><br>
                          <i class="fa fa-map-marker" aria-hidden="true" style="color:#495057;"></i><span class="bolder" style="color:#495057;"> Location: <%= event[i].venue %></span><br>
                          <p class="blog-text" style="color: #768495;"><%= event[i].excerpt %></p>
                          
